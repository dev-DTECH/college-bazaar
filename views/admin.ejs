<% if(locals.mode) switch (mode){
case 'users': {
%>
    <table id="users">
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Ban</th>
        </tr>
        <% for(var i = 0; i < users.length; i++) { %>
            <tr>
                <td><%= users[i].name %></td>
                <td><%= users[i].email %></td>
                <td>
                    <% if(!users[i].blacklist){ %>
                        <a href="?id=<%= users[i].email %>&ban=1">Ban</a>
                    <% }else { %>
                        <a href="?id=<%= users[i].email %>&ban=0">UnBan</a>
                    <% } %>
                </td>
            </tr>
        <% } %>
    </table>

<% break}
case "products": {
%>
    <table id="users">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Owner</th>
            <th>Delete</th>
        </tr>
        <% for(var i = 0; i < products.length; i++) { %>
            <tr>
                <td><%= products[i].id %></td>
                <td><%= products[i].name %></td>
                <td><%= products[i].owner %></td>
                <td>
                        <a href="/admin/approve?id=<%= products[i].id %>&approve=0">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>

<% break}
case "approve": {
%>
    <center><h1 id="admin-header">Waiting for approval</h1></center>

<% } %>
<div class="list">
    <ul class="listorder">
        <% for(var i = 0; i < products.length; i++){ %>
            <li class="product">
                <a href="#gay" class="product-link">
                    <div class="product-container">
                        <div class="picture-container">
                            <div class="picture">

                                <img src="/product/img/<%= products[i].id %>" alt="bottle">
                            </div>
                            <div class="like">
                                <button>
                                    <i class="fa-regular fa-heart"></i>
                                </button>
                            </div>
                        </div>
                        <div class="details">
                            <small>
                                Sponsored
                            </small><span><i class="fa-solid fa-circle-info"></i></span>
                            <p><%= products[i].name %></p>
                            <h5>
                                <i class="fa-solid fa-indian-rupee-sign"></i>&nbsp;<span><%= products[i].price %></span>
                            </h5>
                            <p><%= products[i].desc %></p>
                            <a href="?id=<%= products[i].id %>&approve=1">Yes</a><a
                                    href="?id=<%= products[i].id %>&approve=0">No</a>
                        </div>
                    </div>
                </a>
            </li>
        <% } %>
    </ul>
</div>
<% } %>
